<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>
		Imobiliária Real - Admin
	</title>
	<meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
	<!--     Fonts and icons     -->
	<link rel="stylesheet" type="text/css"
		href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
	<!-- CSS Files -->
	<link href="~/css/material-dashboard.css?v=2.1.2" rel="stylesheet" />
	<!--   Core JS Files   -->
	<script src="~/js/core/jquery.min.js"></script>
	<script src="~/js/core/popper.min.js"></script>
	<script src="~/js/core/bootstrap-material-design.min.js"></script>
	<!--  DataTables.net Plugin, full documentation here: https://datatables.net/  -->
	<script src="~/js/plugins/jquery.dataTables.min.js"></script>
</head>

<body class="">
	<div class="wrapper ">
		<div class="sidebar" data-color="purple" data-background-color="white" data-image="">
			<!--
        Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

        Tip 2: you can also add an image using data-image tag
    -->
			<div class="logo"><a asp-controller="Home" asp-action="Index" class="simple-text logo-normal">
					Imobiliária Real
				</a></div>
			<div class="sidebar-wrapper">
				<ul class="nav">
					<li class="nav-item" id="dashboard">
						<a class="nav-link" asp-controller="Admin" asp-action="Index">
							<i class="material-icons">dashboard</i>
							<p>Painel</p>
						</a>
					</li>
					<li class="nav-item" id="categories">
						<a class="nav-link" asp-controller="Admin" asp-action="Categories">
							<i class="material-icons">content_paste</i>
							<p>Categorias</p>
						</a>
					</li>
					<li class="nav-item" id="businesses">
						<a class="nav-link" asp-controller="Admin" asp-action="Businesses">
							<i class="material-icons">library_books</i>
							<p>Negócios</p>
						</a>
					</li>
					<li class="nav-item" id="states">
						<a class="nav-link" asp-controller="Admin" asp-action="States">
							<i class="material-icons">public</i>
							<p>Estados</p>
						</a>
					</li>
					<li class="nav-item" id="cities">
						<a class="nav-link" asp-controller="Admin" asp-action="Cities">
							<i class="material-icons">location_on</i>
							<p>Municípios</p>
						</a>
					</li>
					<li class="nav-item" id="districts">
						<a class="nav-link" asp-controller="Admin" asp-action="Districts">
							<i class="material-icons">location_city</i>
							<p>Bairros</p>
						</a>
					</li>
					<li class="nav-item" id="properties">
						<a class="nav-link" asp-controller="Admin" asp-action="Properties">
							<i class="material-icons">maps_home_work</i>
							<p>Imóveis</p>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="main-panel">
			<!-- Navbar -->
			<nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
				<div class="container-fluid">
					<div class="navbar-wrapper">
						<a class="navbar-brand" asp-controller="Admin" asp-action="Index">Painel administrativo</a>
					</div>
					<button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index"
						aria-expanded="false" aria-label="Toggle navigation">
						<span class="sr-only">Toggle navigation</span>
						<span class="navbar-toggler-icon icon-bar"></span>
						<span class="navbar-toggler-icon icon-bar"></span>
						<span class="navbar-toggler-icon icon-bar"></span>
					</button>
					<div class="collapse navbar-collapse justify-content-end">
						<ul class="navbar-nav">
							<li class="nav-item dropdown">
								<a class="nav-link" href="javascript:;" id="navbarDropdownProfile"
									data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="material-icons">person</i>
									<p class="d-lg-none d-md-block">
										Administrador
									</p>
								</a>
								<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
									<a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Settings</a>
									<div class="dropdown-divider"></div>
									<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
										<button type="submit" class="dropdown-item btn btn-link text-lowercase text-capitalize" style="width: 94%;">Logout</button>
									</form>
								</div>
							</li>
						</ul>
					</div>
				</div>
			</nav>
			<!-- End Navbar -->
			<div class="content">
				@RenderBody()
			</div>
		</div>
	</div>
	
	<!-- Plugin for the momentJs  -->
	<script src="~/js/plugins/moment.min.js"></script>
	<!-- Include a polyfill for ES6 Promises (optional) for IE11, UC Browser and Android browser support SweetAlert -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/2.4.1/core.js"></script>
	<!-- Library for adding dinamically elements -->
	<script src="~/js/plugins/arrive.min.js"></script>
	<!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
	<script src="~/js/material-dashboard.js?v=2.1.2" type="text/javascript"></script>

	<!-- Script to control active tab -->
	<script>
		const url = document.URL.toLowerCase();
		if (url.includes("categor")) {
			$("#categories").addClass("active")
		} else if (url.includes("business")) {
			$("#businesses").addClass("active")
		} else if (url.includes("state")) {
			$("#states").addClass("active")
		} else if (url.includes("cit")) {
			$("#cities").addClass("active")
		} else if (url.includes("district")) {
			$("#districts").addClass("active")
		} else if (url.includes("propert")) {
			$("#properties").addClass("active")
		} else {
			$("#dashboard").addClass("active")
		}
	</script>
</body>
</html>