@model IEnumerable<DesafioMVC.Models.Category>
@{
    Layout = "_LayoutAdmin";
}
<div class="card">
    <div class="card-header card-header-primary">
        <div class="row">
            <div class="col">
                <h2 class="card-title">Categorias</h2> 
            </div>
            <div class="col align-self-center text-right">
                <a asp-controller="Admin" asp-action="NewCategory" 
                    class="btn btn-secondary" 
                >
                    Criar nova categoria
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead class="text-primary">
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model) {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <a class="btn btn-success" href="/Admin/EditCategory/@category.Id">Editar</a> 

                                <form asp-controller="Categories" asp-action="Delete" method="POST" style="display: inline;">
                                    <input type="hidden" name="id" id="id" value="@category.Id">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>